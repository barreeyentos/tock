<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%a %l %u [%t] "%r" %s %b %D "%i{Referer}" "%i{User-Agent}" "%i{Authorization}"</pattern>
